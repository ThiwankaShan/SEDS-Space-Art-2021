{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/home",
        "destination": "/index.html"
      },
      {
        "source": "/form",
        "destination": "/form.html"
      },
      {
        "source": "/form-success",
        "destination": "/success.html"
      }
    ],
    "redirects": [
      {
        "source": "/404.html",
        "destination": "/301",
        "type": 301
      },
      {
        "source": "/404.html",
        "destination": "/404",
        "type": 404
      },
      {
        "source": "/index.html",
        "destination":"/home" 
      },
      {
        "source": "/form.html",
        "destination": "/form" 
      },
      {
        "source": "/success.html",
        "destination": "/form-success"  
      }
    ]
  }
}